<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.SET_ALARM" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.START_FOREGROUND_SERVICES_FROM_BACKGROUND" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT" />

    <application
        android:allowBackup="true"
        android:configChanges="orientation|keyboardHidden|screenSize"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppWork">
        <activity
            android:name=".CreateActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>

        <receiver
            android:name=".AwaitingWidget"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/awaiting_widget_info" />
        </receiver>

        <activity
            android:name=".AlarmActivity"
            android:excludeFromRecents="true"
            android:exported="true"
            android:launchMode="singleTask"
            android:showForAllUsers="true"
            android:showOnLockScreen="true"
            android:showWhenLocked="true"
            android:turnScreenOn="true"
            android:visibleToInstantApps="true">
            <intent-filter>
                <action android:name="android.intent.action.ALARM" />
            </intent-filter>
        </activity>
        <activity
            android:name=".InActivity"
            android:exported="true"
            android:theme="@style/splashscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="true"
            android:launchMode="singleTask"
            android:singleUser="true" />

        <receiver
            android:name=".services.AlarmWorkManager"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="NOTIFY" />
                <action android:name="HOMEWORK" />
                <action android:name="POSTPONE" />
                <action android:name="DISMISS" />
                <action android:name="EVENT" />
            </intent-filter>
        </receiver>

        <service
            android:name=".services.RemotesService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />
        <service
            android:name=".services.NotificationService"
            android:enabled="true"
            android:foregroundServiceType="phoneCall"
            android:icon="@drawable/ic_stat_name"
            android:stopWithTask="false" />
    </application>

</manifest>