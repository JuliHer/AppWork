<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppWork" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_200</item>
        <item name="colorSecondaryVariant">@color/blue_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="shimmerColor">@color/gray_400</item>
        <item name="maskColor">@color/gray_500</item>
        <item name="apptintIconCOlor">@color/blue_500</item>
        <item name="backgroundDialog">@color/white</item>
        <item name="backgroundBorder">@color/black</item>
        <item name="subTextColor">@color/gray_400</item>
        <item name="iconHint">#092B42</item>
        <item name="backgroundHint">#DBECF3</item>


        //calendar
        <item name="gridColor">@color/gray_900</item>
        <item name="textDayColor">@color/gray_400</item>
        <item name="textDayWeekendColor">@color/gray_500</item>
        <item name="highLightColor">@color/blue_500</item>
        <item name="textHighLightColor">@color/white</item>
        <item name="textHourColor">@color/gray_500</item>

    </style>

    <style name="DropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">

    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="floatinButton">
        <item name="backgroundTint">@color/blue_500</item>
    </style>

    <style name="task_home_item" parent="CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">1dp</item>
    </style>

    <style name="mainColors">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="buttonAction">
        <item name="android:tint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="cardBackgroundColor">@color/blue_500</item>
    </style>

    <style name="subtext">
        <item name="android:textColor">@color/gray_300</item>
    </style>

    <style name="iconMain">
        <item name="android:tint">@color/blue_400</item>
        <item name="android:textColor">@color/blue_400</item>
    </style>

    <style name="iconHnT">
        <item name="android:tint">#092B42</item>
        <item name="android:textColor">#092B42</item>
    </style>

    <style name="subIcon">
        <item name="android:tint">@color/gray_300</item>
    </style>

    <style name="drawabe">
        <item name="tint">@color/black</item>
        <item name="android:iconTint">@color/black</item>
    </style>

    <style name="splash">
        <item name="background">@color/white</item>
        <item name="tint">@color/blue_500</item>
    </style>

    <style name="disable">
        <item name="android:textColor">@color/gray_400</item>
    </style>

    <style name="splashscreen" parent="Theme.AppWork">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>

    <style name="alarmColorBg">
        <item name="android:background">@drawable/alarm_bg_night</item>
    </style>

    <style name="alarmColorCardViewBg">
        <item name="background">@color/blue_500</item>
    </style>

    <style name="Theme.AppWork.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <item name="appWidgetRadius">8dp</item>
        <item name="appWidgetPadding">4dp</item>
        <item name="appWidgetInnerRadius">4dp</item>
    </style>

    <style name="IconColor">
        <item name="android:tint">@color/blue_400</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.AppWork.AppWidgetContainer" parent="Theme.AppWork.AppWidgetContainerParent">
        <item name="android:colorBackground">#bFFF</item>
        <item name="appWidgetRadius">25dp</item>
        <item name="appWidgetPadding">5dp</item>
        <item name="appWidgetInnerRadius">25dp</item>
    </style>
</resources>